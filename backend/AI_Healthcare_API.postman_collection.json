  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set authentication header if token exists",
          "const token = pm.collectionVariables.get('authToken');",
          "if (token) {",
          "    pm.request.headers.add({",
          "        key: 'Authorization',",
          "        value: `Bearer ${token}`",
          "    });",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global test to check response structure",
          "pm.test('Response has success field', function () {",
          "    if (pm.response.code !== 404) {",
          "        const response = pm.response.json();",
          "        pm.expect(response).to.have.property('success');",
          "    }",
          "});",
          "",
          "// Extract common IDs from responses",
          "if (pm.response.code === 200 || pm.response.code === 201) {",
          "    try {",
          "        const response = pm.response.json();",
          "        if (response.data) {",
          "            if (response.data.id && pm.request.url.path.includes('doctors')) {",
          "                pm.collectionVariables.set('doctorId', response.data.id);",
          "            }",
          "            if (response.data.id && pm.request.url.path.includes('patients')) {",
          "                pm.collectionVariables.set('patientId', response.data.id);",
          "            }",
          "            if (response.data.id && pm.request.url.path.includes('appointments')) {",
          "                pm.collectionVariables.set('appointmentId', response.data.id);",
          "            }",
          "            if (response.data.id && pm.request.url.path.includes('medications')) {",
          "                pm.collectionVariables.set('medicationId', response.data.id);",
          "            }",
          "            if (response.data.id && pm.request.url.path.includes('prescriptions')) {",
          "                pm.collectionVariables.set('prescriptionId', response.data.id);",
          "            }",
          "        }",
          "    } catch (e) {",
          "        // Ignore JSON parsing errors",
          "    }",
          "}"
        ]
      }
    }
